@model SalesUpdater.Web.Data.Models.Filters.SaleViewFilterModel

<script src="@Url.Content("~/Scripts/jquery-1.8.0.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")"></script>

@using (Ajax.BeginForm("Find", "Sale", new AjaxOptions()
{
    HttpMethod = "GET",
    UpdateTargetId = "updatedTableWithAjax",
    InsertionMode = InsertionMode.Replace
}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SaleFilter</h4>
        <hr />

        <div class="form-group">
            @Html.Label("Date", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateFrom, new { htmlAttributes = new { @class = "form-control", placeholder = "From" } })
                @Html.ValidationMessageFor(model => model.SumFrom, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.DateTo, new { htmlAttributes = new { @class = "form-control", placeholder = "To" } })
                @Html.ValidationMessageFor(model => model.DateTo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Client", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ClientName, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                @Html.ValidationMessageFor(model => model.ClientName, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.ClientSurname, new { htmlAttributes = new { @class = "form-control", placeholder = "Surname" } })
                @Html.ValidationMessageFor(model => model.ClientSurname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Product", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Sum", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SumFrom, new { htmlAttributes = new { @class = "form-control", placeholder = "From" } })
                @Html.ValidationMessageFor(model => model.SumFrom, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.SumTo, new { htmlAttributes = new { @class = "form-control", placeholder = "To" } })
                @Html.ValidationMessageFor(model => model.SumTo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Manager", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ManagerSurname, new { htmlAttributes = new { @class = "form-control", placeholder = "Surname" } })
                @Html.ValidationMessageFor(model => model.ManagerSurname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
